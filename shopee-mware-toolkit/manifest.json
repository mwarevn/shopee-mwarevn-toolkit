{
    "manifest_version": 3,
    "name": "Shopee Mware Toolkit",
    "description": "Tự động hóa các công việc hỗ trợ bán hàng trên Shopee",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": ["storage", "activeTab", "cookies"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["*://banhang.shopee.vn/portal/product/list/live/all*"],
            "js": ["shopee-auto-boost-product.js"],
            "css": ["css/style.css"],
            "run_at": "document_end"
        }
    ],
    "host_permissions": ["*://*.shopee.vn/*"]
}
